{
  "$schema": "https://design-tokens.org/schemas/tokens.schema.json",
  "$description": "Design tokens oficiais do tema 5 Horas para o shell MiniApp Base.",
  "tokenSetOrder": ["global", "light", "dark"],
  "global": {
    "color": {
      "brand": {
        "primary": { "value": "#10a37f", "type": "color" },
        "secondary": { "value": "#1f232a", "type": "color" },
        "accent": { "value": "#2bb489", "type": "color" },
        "highlight": { "value": "#ececf1", "type": "color" }
      },
      "neutral": {
        "base": { "value": "#0f1720", "type": "color" },
        "muted": { "value": "#71788a", "type": "color" },
        "inverse": { "value": "#f7f8f8", "type": "color" }
      },
      "state": {
        "success": { "value": "#0f9d58", "type": "color" },
        "warning": { "value": "#f29f05", "type": "color" },
        "error": { "value": "#d93025", "type": "color" },
        "info": { "value": "#2563eb", "type": "color" }
      }
    },
    "font": {
      "family": {
        "primary": {
          "value": "'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
          "type": "fontFamily"
        },
        "secondary": {
          "value": "'Source Serif Pro', 'Iowan Old Style', 'Palatino Linotype', serif",
          "type": "fontFamily"
        }
      },
      "scale": {
        "minus-2": { "value": 0.9, "type": "dimension" },
        "minus-1": { "value": 0.95, "type": "dimension" },
        "base": { "value": 1, "type": "dimension" },
        "plus-1": { "value": 1.1, "type": "dimension" },
        "plus-2": { "value": 1.25, "type": "dimension" }
      }
    },
    "space": {
      "2xs": { "value": "0.5rem", "type": "dimension" },
      "xs": { "value": "0.75rem", "type": "dimension" },
      "sm": { "value": "1rem", "type": "dimension" },
      "md": { "value": "1.5rem", "type": "dimension" },
      "lg": { "value": "2rem", "type": "dimension" },
      "xl": { "value": "3rem", "type": "dimension" }
    },
    "radius": {
      "sm": { "value": "8px", "type": "dimension" },
      "md": { "value": "12px", "type": "dimension" },
      "lg": { "value": "16px", "type": "dimension" },
      "pill": { "value": "999px", "type": "dimension" }
    },
    "shadow": {
      "sm": { "value": "0 6px 12px rgba(17, 19, 21, 0.08)", "type": "shadow" },
      "md": { "value": "0 10px 24px rgba(17, 19, 21, 0.12)", "type": "shadow" },
      "lg": { "value": "0 18px 48px rgba(17, 19, 21, 0.18)", "type": "shadow" }
    },
    "z": {
      "base": { "value": 0, "type": "number" },
      "overlay": { "value": 50, "type": "number" },
      "modal": { "value": 100, "type": "number" }
    }
  },
  "light": {
    "color": {
      "surface": {
        "background": { "value": "#f7f8f8", "type": "color" },
        "card": { "value": "#ffffff", "type": "color" },
        "muted": { "value": "#f1f3f5", "type": "color" }
      },
      "border": {
        "subtle": { "value": "rgba(15, 23, 32, 0.08)", "type": "color" },
        "strong": { "value": "rgba(16, 163, 127, 0.35)", "type": "color" }
      },
      "text": {
        "primary": { "value": "#1f232a", "type": "color" },
        "secondary": { "value": "#3a3f4b", "type": "color" },
        "muted": { "value": "#5a6270", "type": "color" }
      }
    }
  },
  "dark": {
    "color": {
      "surface": {
        "background": { "value": "#0b0d10", "type": "color" },
        "card": { "value": "#13161b", "type": "color" },
        "muted": { "value": "#1a1e24", "type": "color" }
      },
      "border": {
        "subtle": { "value": "rgba(236, 236, 241, 0.12)", "type": "color" },
        "strong": { "value": "rgba(16, 163, 127, 0.45)", "type": "color" }
      },
      "text": {
        "primary": { "value": "#ececf1", "type": "color" },
        "secondary": { "value": "#bfc5d6", "type": "color" },
        "muted": { "value": "#8e8ea0", "type": "color" }
      }
    }
  }
}
