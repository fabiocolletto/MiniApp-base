{
  "name": "miniapp-base",
  "version": "4.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "node --test \"tests/**/*.test.js\" \"tests/**/*.spec.js\"",
    "data:validate:bank": "ajv -s schema/question-bank.schema.json -d \"data/*.[A-Z]*.json\" --spec=draft7 --strict=false",
    "data:validate:tokens": "ajv -s schema/tokens.schema.json -d data/tokens.json --spec=draft7 --strict=false",
    "data:validate:topics": "ajv -s schema/topics.schema.json -d data/topicos.*.json --spec=draft7 --strict=false",
    "data:validate": "npm-run-all -s data:validate:*",
    "build:tokens": "node scripts/build/tokens.mjs",
    "build:ripple": "node scripts/build/ripple.mjs",
    "build": "npm-run-all -s build:tokens build:ripple",
    "ripple:smoke": "npm run build && node scripts/tests/ripple-smoke.mjs"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "ajv": "^8.17.1",
    "ajv-cli": "^5.0.0",
    "esbuild": "^0.25.11",
    "jsdom": "^27.1.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "idb": "^8.0.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
