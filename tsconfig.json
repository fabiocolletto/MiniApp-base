{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "types": ["node", "dom"]
  },
  "include": [
    "miniapps/education/ripple/**/*",
    "scripts/**/*",
    "schema/**/*.json",
    "data/**/*.json"
  ]
}
